name: sros-telemetry
prefix: ""

mgmt:
  network: sros-telemetry
  ipv4-subnet: 172.81.0.0/24

topology:
  kinds:
    vr-sros:
      image: vr-sros:23.3.R1
      type: sr-1
      license: /opt/srexperts/license-sros23.txt
      binds:
        - configs/bof.config:/tftpboot/bof.cfg
    linux:
      image: ghcr.io/hellt/network-multitool
  nodes:
  # Ps
    P1:
      kind: vr-sros
      mgmt-ipv4: 172.81.0.11
      startup-config: configs/p1.partial.config
      ports:
        - "40001:22"
        - "40301:57400"
        - "40401:830"
    P2:
      kind: vr-sros
      mgmt-ipv4: 172.81.0.12
      startup-config: configs/p2.partial.config
      ports:
        - "40002:22"
        - "40302:57400"
        - "40402:830"
    # PEs
    PE1:
      kind: vr-sros
      mgmt-ipv4: 172.81.0.21
      startup-config: configs/pe1.partial.config
      ports:
        - "40003:22"
        - "40303:57400"
        - "40403:830"
    PE2:
      kind: vr-sros
      mgmt-ipv4: 172.81.0.22
      startup-config: configs/pe2.partial.config
      ports:
        - "40004:22"
        - "40304:57400"
        - "40404:830"

    # Clients
    client1:
      kind: linux
      mgmt-ipv4: 172.81.0.31
      binds:
        - configs/client1:/config
      exec:
        - ip address add 172.17.0.1/24 dev eth1
        - ip -6 address add 2002::172:17:0:1/96 dev eth1
        - iperf3 -s -p 5201 -D > iperf2_1.log
      group: server
    client2:
      kind: linux
      mgmt-ipv4: 172.81.0.32
      binds:
        - configs/client2:/config
      exec:
        - ip address add 172.17.0.2/24 dev eth1
        - ip -6 address add 2002::172:17:0:2/96 dev eth1
        - iperf3 -s -p 5202 -D > iperf1_2.log
      group: server

    ### TELEMETRY STACK ###
    gnmic:
      kind: linux
      mgmt-ipv4: 172.81.0.41
      image: ghcr.io/openconfig/gnmic:0.30.0
      binds:
        - gnmic-config.yml:/gnmic-config.yml:ro
      cmd: --config /gnmic-config.yml --log subscribe
      group: "10" # group 10 is assigned to the nodes of a telemetry stack

    prometheus:
      kind: linux
      mgmt-ipv4: 172.81.0.42
      image: prom/prometheus:v2.37.8
      binds:
        - configs/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      cmd: --config.file=/etc/prometheus/prometheus.yml
      ports:
        - 40101:9090
      group: "10"

    grafana:
      kind: linux
      mgmt-ipv4: 172.81.0.43
      image: grafana/grafana:9.5.2
      binds:
        - configs/grafana/datasource.yml:/etc/grafana/provisioning/datasources/datasource.yaml:ro
        - configs/grafana/dashboards.yml:/etc/grafana/provisioning/dashboards/dashboards.yaml:ro
        - configs/grafana/dashboards:/var/lib/grafana/dashboards
      ports:
        - 40102:3000
      env:
        GF_INSTALL_PLUGINS: https://algenty.github.io/flowcharting-repository/archives/agenty-flowcharting-panel-1.0.0d.220606199-SNAPSHOT.zip;agenty-flowcharting-panel    
        # env vars to enable anonymous access
        GF_ORG_ROLE: "Admin"
        GF_ORG_NAME: "Main Org"
        GF_AUTH_ANONYMOUS_ENABLED: "true"
        GF_AUTH_ANONYMOUS: "true"
      group: "10"

    ### LOGGING STACK ###
    syslog:
      kind: linux
      mgmt-ipv4: 172.81.0.44
      image: linuxserver/syslog-ng:latest
      binds:
        - configs/syslog/:/config
        - configs/syslog/log:/var/log
      env:
        PUID: 0
        PGID: 0

    promtail:
      kind: linux
      mgmt-ipv4: 172.81.0.45
      image: grafana/promtail:2.7.4
      binds:
        - configs/promtail:/etc/promtail
      cmd: --config.file=/etc/promtail/promtail-config.yml
      ports:
        - 40103:9080

    loki:
      kind: linux
      mgmt-ipv4: 172.81.0.46
      image: grafana/loki:2.7.4
      binds:
        - configs/loki:/etc/loki
      cmd: --config.file=/etc/loki/loki-config.yml
      ports:
        - 40104:3100


  links:
    - endpoints: ["P1:eth1", "PE1:eth1"]
    - endpoints: ["P2:eth1", "PE1:eth2"]
    - endpoints: ["P1:eth2", "PE2:eth1"]
    - endpoints: ["P2:eth2", "PE2:eth2"]
    - endpoints: ["client1:eth1", "PE1:eth3"]
    - endpoints: ["client2:eth1", "PE2:eth3"]
